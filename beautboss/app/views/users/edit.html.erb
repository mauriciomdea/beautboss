<%= render "shared/header_authenticated" %>

<div style="background-color: #f1f1f1;">

  <div class="container" style="padding-top: 20px; padding-bottom: 40px;">

    <div style="margin-bottom: 24px;">

      <h1 class="font-large grey bold"><%= t("website.profile.edit.label_profile", name: @user.name) %></h1>

      <% if @user.errors.any? %>
        <ul>
          <% @user.errors.full_messages.each do |msg| %>
            <li class="notice"><%= msg %></li>
          <% end %>
        </ul>
      <% end %>

      <h2 class="font-large grey regular"><%= t("website.profile.edit.account_settings.title") %></h2>

    </div>

    <div>

      <%= form_for @user, method: :put, class: "form-horizontal" do |f| %>

        <div class="form-group" style="margin-top: 20px; margin-bottom: 20px;">
          <label for="user[name]" class="col-sm-3 control-label font-medium grey regular" style="text-align: right; line-height: 200%;"><%= t("website.profile.edit.account_settings.label_name") %></label>
          <div class="col-sm-9">
            <%= f.text_field :name, class: "form-control input-profile" %>
          </div>
        </div>

        <div class="form-group" style="margin-top: 20px; margin-bottom: 20px;">
          <label for="user[username]" class="col-sm-3 control-label font-medium grey regular" style="text-align: right; line-height: 200%;"><%= t("website.profile.edit.account_settings.label_username") %></label>
          <div class="col-sm-9">
            <%= f.text_field :username, class: "form-control input-profile" %>
          </div>
        </div>

        <div class="form-group">
          <label for="user[email]" class="col-sm-3 control-label font-medium grey regular" style="text-align: right; line-height: 200%;"><%= t("website.profile.edit.account_settings.label_email") %></label>
          <div class="col-sm-9">
            <%= f.email_field :email, class: "form-control input-profile" %>
          </div>
        </div>

        <div class="form-group" style="margin-top: 20px; margin-bottom: 20px;">
          <label for="user[website]" class="col-sm-3 control-label font-medium grey regular" style="text-align: right; line-height: 200%;"><%= t("website.profile.edit.account_settings.label_web") %></label>
          <div class="col-sm-9">
            <%= f.text_field :website, class: "form-control input-profile" %>
          </div>
        </div>

        <div class="form-group" style="margin-top: 20px; margin-bottom: 20px;">
          <label for="user[location]" class="col-sm-3 control-label font-medium grey regular" style="text-align: right; line-height: 200%;"><%= t("website.profile.edit.account_settings.label_location") %></label>
          <div class="col-sm-9">
            <%= f.text_field :location, class: "form-control input-profile" %>
          </div>
        </div>

        <div class="form-group" style="margin-top: 20px; margin-bottom: 20px;">
          <label for="user[bio]" class="col-sm-3 control-label font-medium grey regular" style="text-align: right; line-height: 200%;"><%= t("website.profile.edit.account_settings.label_bio") %></label>
          <div class="col-sm-9">
            <%= f.text_area :bio, rows: "3", class: "form-control input-profile" %>
          </div>
        </div>

        <div class="form-group" style="margin-top: 20px; margin-bottom: 20px;">
          <label for="user[language]" class="col-sm-3 control-label font-medium grey regular" style="text-align: right; line-height: 200%;"><%= t("website.profile.edit.account_settings.label_language") %></label>
          <div class="col-sm-9">
            <%= f.select :language, User::LANGUAGES.map{ |language| [ language[1], language[0] ] }, {}, { class: "form-control input-profile", style: "-webkit-appearance: none; -webkit-border-radius: 0px;" } %>
          </div>
        </div>

        <div style="margin-bottom: 24px;">
          <div class="col-sm-3">&nbsp;</div>
          <div class="col-sm-9 pull-right">
            <%= submit_tag t("website.profile.edit.account_settings.button_save"), class: "btn btn-default", style: "margin-right: 0;" %>
          </div>
        </div>

      <% end %>

    </div>

  </div> 

</div>

<div style="background-color: #ffffff; height: 100%;">

  <div class="container" style="padding-top: 20px; padding-bottom: 40px;">

    <div style="margin-bottom: 24px;">

      <h2 class="font-large grey regular"><%= t("website.profile.edit.reset_password.title") %></h2>

      <p class="font-medium grey light"><%= t("website.profile.edit.reset_password.subtitle") %></p>

    </div>

    <div>

      <%= form_for @user, method: :put, class: "form-horizontal" do |f| %>
      
        <div class="form-group">
          <label for="user[password]" class="col-sm-3 control-label font-medium grey regular" style="text-align: right; line-height: 200%;"><%= t("website.profile.edit.reset_password.label_new") %></label>
          <div class="col-sm-9">
            <%= f.password_field :password, class: "form-control input-profile" %>
          </div>
        </div>

        <div class="form-group">
          <label for="user[password_confirmation]" class="col-sm-3 control-label font-medium grey regular" style="text-align: right; line-height: 200%;"><%= t("website.profile.edit.reset_password.label_confirm") %></label>
          <div class="col-sm-9">
            <%= f.password_field :password_confirmation, class: "form-control input-profile" %>
          </div>
        </div>

        <div style="margin-bottom: 24px;">
          <div class="col-sm-3">&nbsp;</div>
          <div class="col-sm-9 pull-right">
            <%= submit_tag t("website.profile.edit.reset_password.button_save"), class: "btn btn-default", style: "margin-right: 0;" %>
          </div>
        </div>

      <% end %>

    </div>

  </div>

</div>

<div style="background-color: #f1f1f1; height: 100%;">

  <div class="container" style="padding-top: 20px; padding-bottom: 40px;">

    <div style="margin-bottom: 24px;">

      <h2 class="font-large grey regular"><%= t("website.profile.edit.delete_account.title") %></h2>

      <p class="font-medium grey light"><%= t("website.profile.edit.delete_account.subtitle") %></p>

    </div>

    <div>

      <%= form_for @user, method: :delete, class: "form-horizontal" do |f| %>
      
        <div class="form-group">
          <label for="user[password]" class="col-sm-3 control-label font-medium grey regular" style="text-align: right; line-height: 200%;"><%= t("website.profile.edit.delete_account.label_password") %></label>
          <div class="col-sm-9">
            <%= f.password_field :password, class: "form-control input-profile" %>
          </div>
        </div>

        <div style="margin-bottom: 24px;">
          <div class="col-sm-3">&nbsp;</div>
          <div class="col-sm-9 pull-right">
            <%= submit_tag t("website.profile.edit.delete_account.button_delete"), class: "btn btn-default", style: "margin-right: 0;" %>
          </div>
        </div>

      <% end %>

    </div>

  </div>

</div>

<%= render "shared/extended_footer" %>