<div class="home">

  <div class="container">
    <%= link_to image_tag("logo.png", alt: "beautboss", class: "center logo"), root_path %>
  </div>

  <div class="clearfix center">
  
    <div class="content-sign-in">

    <div class="center" style="padding-top: 24px; padding-bottom: 24px;">
      <h1 class="title"><%= t("website.forgot_password.title").html_safe %></h1>
    </div>
    <% flash.each do |name, msg| %>
        <%= content_tag :div, msg, class: "notice center" %>
      <% end %>
    <div class="">
      <p class="grey-text center" style="width: 388px; padding: 0 0 20px 0; text-align: center;">
        <%= t("website.forgot_password.text").html_safe %>
      </p>
      <%= form_for @user, url: new_password_path do |f| %>
        <div class="form-group">
          <%= f.email_field :email, class: "form-control input-lg center", placeholder: "email" %>
        </div>
        <br/>
        <%= submit_tag t("website.forgot_password.button_send"), class: "btn btn-primary center" %>
        <%= link_to t("website.forgot_password.button_cancel"), root_path, class: "btn btn-default center" %>
      <% end %>
    </div>

  </div>

</div>

<div style="margin-bottom: 40px;"></div>

<%= render "shared/footer" %>