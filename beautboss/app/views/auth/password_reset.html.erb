<div id="header">
  <%= image_tag "beautboss-logo.png", alt: "beautboss", class: "center logo" %>
</div>

<div class="content">
  <div class="center" style="align-self: baseline; padding: 24px 0 18px 0; margin: 0;">
    <h1 class="title">i forgot my password :(</h1>
  </div>
  <div class="">
    <p class="grey-text center">Please pick a new password:</p>
    <form>
      <div class="form-group">
        <input type="password" class="form-control input-lg center" id="password" placeholder="new password">
        <input type="password" class="form-control input-lg center" id="password_confirmation" placeholder="confirm password">
      </div>
    </form>
    <br/>
    <button type="button" class="btn btn-primary center">save new password</button>
    <button type="button" class="btn btn-default center">cancel</button>
  </div>
</div>

<%= render "shared/footer" %>