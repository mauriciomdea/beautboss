<div class="home" style="">

  <div style="width: 970px; margin-left: auto; margin-right: auto;">
    <div class="pull-left" style="width: 424px; min-height: 640px;">
      <%= image_tag "iphones.png", alt: "screenshot", class: "screenshot" %>
    </div>
    <div class="pull-right" style="width: 546px;">
      <div class="" style="width: 546px;">
        <div class="">
          <%= image_tag "logo.png", alt: "beautboss", class: "pull-left", style: "margin-top: 60px; margin-left: 0;" %>
        </div>
        <div class="" style="padding-top: 80px; padding-right: 16px; text-align: right;">
          <%= link_to image_tag("icon-home.png", alt: "sign in", class: "sign-in-icon"), sign_in_path %>
          <%= link_to t("website.homepage.button_sign_in"), sign_in_path, class: "sign-in-text" %>
        </div>
      </div>
      <div class="clearfix">
        <div class="content-home">
          <h1 class="title" style="padding-top: 38px; padding-left: 15px;"><%= t("website.homepage.title") %></h1>
          <div style="width: 490px; margin-top: 24px; margin-bottom: 20px; margin-left: 20px; text-align: justify;">
            <p class="grey-text"><%= t("website.homepage.paragraph_one") %></p>
            <p class="grey-text"><%= t("website.homepage.paragraph_two") %></p>
            <p class="grey-text"><%= t("website.homepage.paragraph_three") %></p>
          </div>
          <%= link_to image_tag("app-store-button.svg", alt: "Download on the App Store", class: "app-store-button-large"), "https://itunes.apple.com/us/app/beautboss/id1099934307?ls=1&mt=8" %>
          <a href='https://play.google.com/store/apps/details?id=com.beautboss.app&utm_source=website&utm_medium=web&utm_content=website&utm_campaign=homepage&pcampaignid=1'><img alt='Get it on Google Play' height="85" src='https://play.google.com/intl/en_us/badges/images/generic/en_badge_web_generic.png'/></a>
        </div>
      </div>
      
    </div>
  </div>
  
</div>

<div style="width: 100%; height: 20px;"></div>

<%= render "shared/footer" %>
